# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/shopsphere

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_use_long_random_string

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Server Configuration
PORT=5000
NODE_ENV=development

# Application Settings
PAGINATION_LIMIT=12

# Optional: Frontend URL for CORS (if different from localhost)
# FRONTEND_URL=https://your-frontend-domain.com

# Optional: Payment Gateway (for future implementation)
# PAYPAL_CLIENT_ID=your_paypal_client_id
# STRIPE_SECRET_KEY=your_stripe_secret_key

# Optional: Email Service (for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_email_password

# Optional: Redis (for caching)
# REDIS_URL=redis://localhost:6379

# Security Configuration
# SESSION_SECRET=your_session_secret_here
# ENCRYPTION_KEY=your_encryption_key_here