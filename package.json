{
  "name": "shopsphere-ecommerce",
  "version": "2.0.0",
  "description": "Modern full-stack e-commerce platform built with React, Node.js, Express, and MongoDB. Features include user authentication, shopping cart, admin dashboard, and secure payment processing.",
  "type": "module",
  "main": "backend/server.js",
  "keywords": [
    "ecommerce",
    "react",
    "nodejs",
    "mongodb",
    "express",
    "redux",
    "tailwindcss",
    "jwt",
    "shopping-cart",
    "admin-dashboard"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Durgesh-Vishwakarma/ShopSphere.git"
  },
  "homepage": "https://shop-sphere-kohl.vercel.app",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder.js",
    "data:destroy": "node backend/seeder.js -d",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint backend --ext js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint backend --ext js --fix"
  },
  "author": "Durgesh Vishwakarma",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^9.9.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "vitest": "^2.0.5"
  }
}
